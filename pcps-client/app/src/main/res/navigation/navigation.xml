<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    tools:ignore="InvalidNavigation">
    <fragment
        android:id="@+id/welcome_fragment"
        android:name="de.pcps.jamtugether.content.welcome.WelcomeFragment"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcome_fragment_to_menu_fragment"
            app:destination="@id/menu_fragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"
            app:popUpTo="@id/welcome_fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/menu_fragment"
        android:name="de.pcps.jamtugether.content.menu.MenuFragment"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menu_fragment_to_join_room_fragment"
            app:destination="@id/join_room_fragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
        <action
            android:id="@+id/action_menu_fragment_to_create_room_fragment"
            app:destination="@id/create_room_fragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
        <action
            android:id="@+id/action_menu_fragment_to_settings_fragment"
            app:destination="@id/settings_fragment"
            app:enterAnim="@anim/slide_in_from_bottom"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_to_bottom" />
    </fragment>
    <fragment
        android:id="@+id/create_room_fragment"
        android:name="de.pcps.jamtugether.content.menu.create.CreateRoomFragment"
        tools:layout="@layout/fragment_create_room">
        <action
            android:id="@+id/action_create_room_fragment_to_admin_room_fragment"
            app:destination="@id/admin_room_fragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"
            app:popUpTo="@id/menu_fragment" />
    </fragment>
    <fragment
        android:id="@+id/join_room_fragment"
        android:name="de.pcps.jamtugether.content.menu.join.JoinRoomFragment"
        tools:layout="@layout/fragment_join_room">
        <action
            android:id="@+id/action_join_room_fragment_to_regular_room_fragment"
            app:destination="@id/regular_room_fragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"
            app:popUpTo="@id/menu_fragment" />
    </fragment>
    <fragment
        android:id="@+id/admin_room_fragment"
        android:name="de.pcps.jamtugether.content.room.AdminRoomFragment"
        tools:layout="@layout/fragment_tab_layout">
        <argument
            android:name="roomID"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/regular_room_fragment"
        android:name="de.pcps.jamtugether.content.room.RegularRoomFragment"
        tools:layout="@layout/fragment_tab_layout">
        <argument
            android:name="roomID"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment"
        android:name="de.pcps.jamtugether.content.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />
</navigation>
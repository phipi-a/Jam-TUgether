<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    tools:ignore="InvalidNavigation">
    <fragment
        android:id="@+id/welcome_fragment"
        android:name="de.pcps.jamtugether.content.welcome.WelcomeFragment"
        android:label="@string/choose_main_instrument"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcome_fragment_to_menu_fragment"
            app:destination="@id/menu_fragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"
            app:popUpTo="@id/welcome_fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/menu_fragment"
        android:name="de.pcps.jamtugether.content.menu.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menu_fragment_to_join_room_fragment"
            app:destination="@id/join_room_fragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
        <action
            android:id="@+id/action_menu_fragment_to_create_room_fragment"
            app:destination="@id/create_room_fragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
    </fragment>
    <fragment
        android:id="@+id/create_room_fragment"
        android:name="de.pcps.jamtugether.content.room.create.CreateRoomFragment"
        tools:layout="@layout/fragment_create_room">
        <action
            android:id="@+id/action_create_room_fragment_to_jam_room_fragment"
            app:destination="@id/jam_room_fragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"
            app:popUpTo="@id/menu_fragment" />
    </fragment>
    <fragment
        android:id="@+id/join_room_fragment"
        android:name="de.pcps.jamtugether.content.room.join.JoinRoomFragment"
        android:label="JoinRoomFragment"
        tools:layout="@layout/fragment_join_room" />
    <fragment
        android:id="@+id/jam_room_fragment"
        android:name="de.pcps.jamtugether.content.room.jam.JamRoomFragment"
        android:label="JamRoomFragment" />
</navigation>
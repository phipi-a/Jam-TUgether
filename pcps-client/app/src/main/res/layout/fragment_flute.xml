<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <data>

        <variable
            name="viewModel"
            type="de.pcps.jamtugether.ui.room.music.instrument.flute.FluteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/control_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="@{() -> viewModel.onCreateOwnSoundtrackButtonClicked()}"
                android:src="@{viewModel.getStartedCreatingOwnSoundtrack() ? @drawable/ic_stop : @drawable/ic_play}"
                app:tint="@color/iconColor" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="@{viewModel.getTimerText()}"
                android:textColor="@color/primaryTextColor" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_flute"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/flute"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/control_layout"
            app:touchListener="@{viewModel}" />

        <ImageView
            android:id="@+id/iv_flute_fill"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/flute_clip"
            app:layout_constraintBottom_toBottomOf="@id/iv_flute"
            app:layout_constraintEnd_toEndOf="@id/iv_flute"
            app:layout_constraintStart_toStartOf="@id/iv_flute"
            app:layout_constraintTop_toTopOf="@id/iv_flute" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
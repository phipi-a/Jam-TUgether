<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage, ContentDescription">

    <data>

        <variable
            name="viewModel"
            type="de.pcps.jamtugether.ui.room.music.instrument.flute.FluteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/own_soundtrack_controls_layout"
            layout="@layout/view_own_soundtrack_controls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/soundtrack_item_margin_start"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/soundtrack_item_margin_start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.slider.Slider
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:stepSize="1.0"
            android:valueFrom="0.0"
            android:valueTo="12.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/own_soundtrack_controls_layout"
            app:onPitchChanged="@{(slider, value, fromUser) -> viewModel.onPitchChanged((int) value)}"
            app:thumbColor="@color/iconColor"
            app:tickColorActive="@color/volumeSliderTickActiveColor"
            app:tickColorInactive="@color/volumeSliderTickInactiveColor"
            app:trackColorActive="@color/volumeSliderTickActiveColor"
            app:trackColorInactive="@color/volumeSliderTickInactiveColor" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
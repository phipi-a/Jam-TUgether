<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="de.pcps.jamtugether.ui.room.music.instrument.flute.FluteViewModel" />
    </data>

    <de.pcps.jamtugether.ui.room.music.instrument.flute.FluteView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- the margins are being calculated later -->

        <ImageView
            android:id="@+id/iv_flute"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/flute"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:touchListener="@{viewModel}" />

        <ImageView
            android:id="@+id/iv_flute_fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/flute_clip"
            app:layout_constraintBottom_toBottomOf="@id/iv_flute"
            app:layout_constraintEnd_toEndOf="@id/iv_flute"
            app:layout_constraintStart_toStartOf="@id/iv_flute"
            app:layout_constraintTop_toTopOf="@id/iv_flute"
            app:pitchLevel="@{viewModel.pitchLevel}" />

        <LinearLayout
            android:id="@+id/note_labels_layout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_flute"
            app:layout_constraintTop_toTopOf="parent" />

    </de.pcps.jamtugether.ui.room.music.instrument.flute.FluteView>
</layout>

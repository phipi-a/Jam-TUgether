<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <data>

        <variable
            name="viewModel"
            type="de.pcps.jamtugether.content.room.create.CreateRoomViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/sound_wave_bar_track"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray"
                android:hint="Platzhalter Tonspur Gesamt"
                android:padding="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:singleLine="true"
                android:textColor="@color/red"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/fast_rewind_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_fast_rewind"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.042"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sound_wave_bar_track"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_play_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/fast_rewind_button"
                app:layout_constraintStart_toEndOf="@+id/fast_rewind_button"
                app:layout_constraintTop_toTopOf="@+id/fast_rewind_button"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fast_forward_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_fast_forward"
                app:layout_constraintBottom_toBottomOf="@+id/play_button"
                app:layout_constraintStart_toEndOf="@+id/play_button"
                app:layout_constraintTop_toTopOf="@+id/play_button"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_pause"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.042"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/play_button"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/stop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_stop"
                app:layout_constraintBottom_toBottomOf="@+id/pause_button"
                app:layout_constraintStart_toEndOf="@+id/pause_button"
                app:layout_constraintTop_toTopOf="@+id/pause_button"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/sound_wave_bar_instrument"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray"
                android:hint="Platzhalter Tonspur Instrument"
                android:padding="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sound_wave_bar_track"
                android:singleLine="true"
                android:textColor="@color/red"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/fast_rewind_button_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_fast_rewind"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.042"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sound_wave_bar_instrument"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/play_button_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_play_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/fast_rewind_button_instrument"
                app:layout_constraintStart_toEndOf="@+id/fast_rewind_button_instrument"
                app:layout_constraintTop_toTopOf="@+id/fast_rewind_button_instrument"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fast_forward_button_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_fast_forward"
                app:layout_constraintBottom_toBottomOf="@+id/play_button_instrument"
                app:layout_constraintStart_toEndOf="@+id/play_button_instrument"
                app:layout_constraintTop_toTopOf="@+id/play_button_instrument"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/pause_button_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_pause"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.042"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/play_button_instrument"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/stop_button_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_stop"
                app:layout_constraintBottom_toBottomOf="@+id/pause_button_instrument"
                app:layout_constraintStart_toEndOf="@+id/pause_button_instrument"
                app:layout_constraintTop_toTopOf="@+id/pause_button_instrument"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/record_button_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:onClick="@{() -> viewModel.}"
                android:src="@drawable/ic_baseline_mic"
                app:layout_constraintBottom_toBottomOf="@+id/fast_forward_button_instrument"
                app:layout_constraintStart_toEndOf="@+id/fast_forward_button_instrument"
                app:layout_constraintTop_toTopOf="@+id/fast_forward_button_instrument"
                app:tint="@color/iconColor"
                tools:ignore="ContentDescription" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
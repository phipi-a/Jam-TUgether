<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage, ContentDescription">

    <!-- todo add soundtrack object and click listener for cancel button-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/soundtrack_item_margin_start"
        android:layout_marginTop="@dimen/soundtrack_item_margin_top"
        android:layout_marginEnd="@dimen/soundtrack_item_margin_end"
        android:layout_marginBottom="@dimen/soundtrack_item_margin_top"
        android:orientation="vertical">

        <include
            android:id="@+id/soundtrack_controls_layout"
            layout="@layout/view_soundtrack_controls" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- todo replace with custom view -->
            <TextView
                android:id="@+id/soundtrack_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/soundtrack_view_height"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:text="Soundtrack Container"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_clear"
                android:src="@drawable/ic_clear"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/clearButtonColor" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
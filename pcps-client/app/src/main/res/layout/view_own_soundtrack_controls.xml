<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.pcps.jamtugether.ui.room.music.instrument.InstrumentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/play_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="@{() -> viewModel.onCreateSoundtrackButtonClicked()}"
            android:src="@{viewModel.getStartedSoundtrackCreation() ? @drawable/ic_stop : @drawable/ic_play}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/iconColor"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/timer_text_view"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="@{viewModel.getTimerText()}"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/play_pause_button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/count_down_timer_text_view"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{viewModel.getCountDownTimerText()}"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBottom_toBottomOf="@id/timer_text_view"
            app:layout_constraintStart_toStartOf="@id/timer_text_view"
            app:layout_constraintTop_toTopOf="@id/timer_text_view" />

        <CheckBox
            android:id="@+id/composite_soundtrack_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:onClick="@{() -> viewModel.onCompositeSoundtrackCheckBoxChecked(compositeSoundtrackCheckBox.isChecked())}"
            android:text="@string/play_with_composite_soundtrack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
